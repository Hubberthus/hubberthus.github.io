	"RESET": {
		"description": "The PC6 pin can act as Reset input. A low level on this pin for longer than the minimum pulse length will generate a Reset, even if the clock is not running.",
		"pins": {"RST": [29]},
		"validators": {
			"fuse-off": {
				"check": "core.peripherals.RESET.active_mode == 'OFF'",
				"severity": "INFO",
				"message": "RSTDISBL Fuse needs to be UNprogrammed for the pin to work as Reset"
			},
			"fuse-on": {
				"check": "core.peripherals.RESET.active_mode == 'ON'",
				"severity": "INFO",
				"message": "RSTDISBL Fuse needs to be programmed for the pin to work as PC6"
			}
		},
		"color": "orangered",
		"active_mode": "ON"
	},
	"XTAL": {
		"description": "Low power oscillator, with reduced voltage swing on the XTAL2 output. It gives the lowest power consumption, but is not capable of driving other clock inputs, and may be more susceptible to noise in noisy environments.",
		"pins": {"XTAL1": [7], "XTAL2": [8]},
		"color": "orange",
		"active_mode": "OFF"
	},
	"ADC": {
		"description": "10-bit analog-to-digital converters.",
		"pins": {"ADC0": [null, 23], "ADC1": [null, 24], "ADC2": [null, 25], "ADC3": [null, 26],
			"ADC4": [null, 27], "ADC5": [null, 28], "ADC6": [19], "ADC7": [22]},
		"color": "chocolate",
		"active_mode": "OFF"
	},
	"ACMP": {
		"description": "The Analog Comparator compares the input values on the positive pin AIN0 and negative pin AIN1. When the voltage on the positive pin AIN0 is higher than the voltage on the negative pin AIN1, the Analog Comparator output, ACO bit is set.",
		"pins": {"AIN0": [10], "AIN1": [11]},
		"color": "coral",
		"active_mode": "OFF"
	},
	"USART": {
		"description": "Highly flexible serial communication device. Can also be used in Master SPI mode. Hardware managed SS/CS pin is not supported.",
		"modes": {
			"Serial": ["TXD", "RXD"],
			"SPI": ["MISO", "MOSI", "SCK"]
			},
		"pins": {"TXD": [30], "RXD": [31],
				"MISO": ["RXD"], "MOSI": ["TXD"], "SCK": [2]},
		"options": {
			"baud": {
				"name": "Baud rate",
				"type": "selector",
				"value": 115200,
				"choices": [300, 600, 1200, 2400, 4800, 9600, 14400, 19200, 28800, 38400, 57600, 115200],
				"dependencies": [
					"core.peripherals.USART.active_mode=='Serial'"
				]
			}
		},
		"color": "blue",
		"active_mode": "Serial"
	},
	"SPI": {
		"description": "Generic master/slave SPI interface. Supports standard, 3-wire and quad SPI modes. Up to 3 hardware managed CS pins can be assigned to it.",
		"pins": {"MISO": [16], "MOSI": [15], "SCK": [17], "SS": [14]},
		"options": {
			"master": {
				"name": "Master",
				"type": "boolean",
				"value": true
			}
		},
		"color": "purple",
		"active_mode": "OFF"
	},
	"I2C": {
		"description": "Generic master/slave I2C (TWI) interface with up to 400kHz data transfer speed.",
		"pins": {"SDA": [27], "SCL": [28]},
		"options": {
			"master": {
				"name": "Master",
				"type": "boolean",
				"value": true
			},
			"address": {
				"name": "Slave address (7-bit)",
				"type": "integer",
				"value": 8,
				"validators": {
					"range": {
						"check": "((value >= 0) && (value < 128))",
						"severity": "ERROR",
						"message": "The address must be a 7-bit integer [0..127]"
					},
					"reserved": {
						"check": "((value > 7) && ((value & 0x78) != 0x78) && ((value & 0x7C) != 0x7C))",
						"severity": "ERROR",
						"message": "The selected address is reserved, check I2C documentation about special addresses"
					}
				},
				"dependencies": [
					"core.peripherals.I2C.options.master.value == false"
				]
			}
		},
		"color": "lawngreen",
		"active_mode": "OFF"
	},
	"dWIRE": {
		"description": "The debugWIRE On-chip debug system uses a One-wire, bi-directional interface to control the program flow, execute AVR instructions in the CPU and to program the different non-volatile memories.",
		"pins": {"dW": [29]},
		"color": "lightblue",
		"active_mode": "OFF"
	}
